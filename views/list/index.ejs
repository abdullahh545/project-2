<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Your Tasks</title>
    <link rel="stylesheet" href="/index.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lottie-web/5.12.2/lottie.min.js"></script>
</head>
<body>
    <%- include('../partials/navbar') %>
    
    <div class="lists">
        <h1>Your Task Lists</h1>
        <div>
            <a href="/lists/new">+ New List</a>
        </div>
    </div>

    <% if (lists.length === 0) { %>
        <p class="empty-state">No task yet.</p>
    <% } %>

    <div class="main-content">
        <div class="content-section">
            <% lists.forEach(list => { %>
                <div class="list-card">
                    <h2><%= list.title %></h2>
                    <div class="list-actions">
                        <a href="/lists/<%= list._id %>/edit">Edit List</a>
                        <form action="/lists/<%= list._id %>/delete" method="POST" style="display:inline;">
                            <button type="submit">Delete List</button>
                        </form>
                        <a href="/tasks/list/<%= list._id %>/tasks">+ Add Task</a>
                    </div>

                    <% if (list.tasks && list.tasks.length > 0) { %>
                        <ul class="task-list">
                            <% list.tasks.forEach(task => { %>
                                <li class="task-item">
                                    <strong><%= task.title %></strong>
                                    <p><%= task.description %></p>
                                    <% if (task.completed) { %> 
                                        <span class="task-status">âœ… Completed</span> 
                                    <% } %>
                                    <div class="task-actions">
                                        <a href="/tasks/<%= task._id %>/edit">Edit</a>
                                        <form action="/tasks/<%= task._id %>/delete" method="POST" style="display:inline;">
                                            <button type="submit">Delete</button>
                                        </form>
                                    </div>
                                </li>
                            <% }) %>
                        </ul>
                    <% } else { %>
                        <p class="empty-state">No tasks in this list yet.</p>
                    <% } %>
                </div>
            <% }) %>
        </div>

        <!-- Lottie Animation -->
        <div class="lottie-container">
            <div id="lists-animation"></div>
        </div>
    </div>

    <script>
        // Load Lottie animation
        lottie.loadAnimation({
            container: document.getElementById('lists-animation'),
            renderer: 'svg',
            loop: true,
            autoplay: true,
            path: '/asset/Checklist.json'
        });
    </script>
</body>
</html>