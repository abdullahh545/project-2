<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create New List - My Bucket List</title>
    <link rel="stylesheet" href="/new.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lottie-web/5.12.2/lottie.min.js"></script>
</head>
<body>
    <%- include('../partials/navbar') %>
    
    <div class="new-list-container">
        <!-- Lottie Animation -->
        <div class="lottie-container">
            <div id="programming-animation"></div>
        </div>

        <div class="new-list-form">
            <h1>Create a New List</h1>
            
            <% if (error) { %>
                <p class="error"><%= error %></p>
            <% } %>

            <form action="/lists" method="POST">
                <div class="form-group">
                    <label for="title">List Title:</label>
                    <input type="text" id="title" name="title" required>
                </div>

                <div class="form-group">
                    <button type="submit">Create List</button>
                </div>
            </form>

            <div class="back-link">
                <a href="/lists">‚Üê Back to all lists</a>
            </div>
        </div>
    </div>

    <script>
        // Load Lottie animation
        lottie.loadAnimation({
            container: document.getElementById('programming-animation'),
            renderer: 'svg',
            loop: true,
            autoplay: true,
            path: '/asset/Programming Animation.json'
        });
    </script>
</body>
</html>