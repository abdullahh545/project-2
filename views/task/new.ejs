<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create New Task - My Bucket List</title>
    <link rel="stylesheet" href="/new2.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lottie-web/5.12.2/lottie.min.js"></script>
</head>
<body>
    <%- include('../partials/navbar') %>

    <div class="task-creation-container">
        <!-- Lottie Animation -->
        <div class="lottie-container">
            <div id="maintenance-animation"></div>
        </div>

        <div class="task-creation-form">
            <h1>Create a New Task</h1>
            
            <% if (error) { %>
                <p class="error"><%= error %></p>
            <% } %>

            <form action="/tasks/list/<%= listId %>/tasks" method="POST">
                <div class="form-group">
                    <label for="title">Task Title:</label>
                    <input type="text" id="title" name="title" required>
                </div>

                <div class="form-group">
                    <label for="description">Task Description:</label>
                    <textarea id="description" name="description" required></textarea>
                </div>

                <div class="form-group">
                    <label for="category">Category:</label>
                    <input type="text" id="category" name="category" required>
                </div>

                <div class="form-group">
                    <button type="submit">Create Task</button>
                </div>
            </form>

            <div class="back-link">
                <a href="/lists">‚Üê Back To Lists</a>
            </div>
        </div>
    </div>

    <script>
        // Load Lottie animation
        lottie.loadAnimation({
            container: document.getElementById('maintenance-animation'),
            renderer: 'svg',
            loop: true,
            autoplay: true,
            path: '/asset/Maintenance.json'
        });
    </script>
</body>
</html>