<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Tasks - My Bucket List</title>
    <link rel="stylesheet" href="/index2.css">
</head>
<body>
    <%- include('../partials/navbar') %>

    <div class="container">
        <div class="task-index-container">
            <div class="task-index-header">
                <h1>All Tasks by List</h1>
            </div>

            <% listsWithTasks.forEach(list => { %>
                <div class="list-section">
                    <h2><%= list.title %></h2>
                    
                    <% if (list.tasks.length === 0) { %>
                        <div class="empty-state">
                            <p>No tasks yet.</p>
                        </div>
                    <% } else { %>
                        <ul class="task-list">
                            <% list.tasks.forEach(task => { %>
                                <li class="task-item">
                                    <strong><%= task.title %></strong>
                                    <p><%= task.description %></p>
                                    <% if (task.completed) { %>
                                        <span class="task-status completed">✅ Completed</span>
                                    <% } else { %>
                                        <span class="task-status pending">❌ Pending</span>
                                    <% } %>
                                </li>
                            <% }) %>
                        </ul>
                    <% } %>

                    <a href="/tasks/list/<%= list._id %>/tasks" class="add-task-link">+ Add Task</a>
                </div>
            <% }) %>

            <% if (typeof task !== 'undefined') { %>
                <div class="task-details">
                    <h3><%= task.category %> → <%= task.title %></h3>
                    <p><%= task.description %></p>
                    <p>Status: <%= task.completed ? "✅ Completed" : "❌ Not Completed" %></p>
                    
                    <div class="task-actions">
                        <form action="/tasks/<%= task._id %>/edit" method="GET">
                            <button type="submit">Edit</button>
                        </form>

                        <form action="/tasks/<%= task._id %>/delete" method="POST">
                            <button type="submit">Delete</button>
                        </form>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</body>
</html>